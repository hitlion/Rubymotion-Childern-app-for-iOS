{
	"title"  : "Babbo per-Bundle overrides",
	"include": "https://some-server.tld/rules/rules-base.json",

	"ruleset" : {
		"type" : "smil_rules",
		"data" : [
			{
				"name"     : "level",
				"selector" : ":level[level_id>1]",
				"merge_ref": ":level[level_id=1]",
				"additionalProperties": "$smil_object[name=level]"
			},
			{
				"name"     : "object_content",
				"selector" : ":level[level_id=*]:screen[screen_id=1]:object[object_id=*]:object_content",
				"modify"   : "client_server",
				"merge"    : "keep_modified",
				"additionalProperties": "$smil_object[name=object_content]"
			},
			/* RK: Dieser Block modifiziert die 'content' Property des 
			 * 'variables'-Arrays der 'object_slot'-Property bestimmter Objekte.
			 * Diesen Sonderfall muss ich in der rules-base noch besser abbilden.. */
			{
				"name"    : "object_slot",
				"selector": ":level[level_id=*]:screen[screen_id=1]:object[object_id>1]:object_slot:variables:smil_slot_variable[name=var1]",
				"properties": {
					"content": {
						"modify": "client_server",
						"merge" : "keep_modified"
					}
				},
				"additionalProperties": "$smil_object[name=smil_slot_variable]"
			},	
			{
				"name"    : "object_content",
				"selector": ":level[level_id=*]:screen[screen_id=2]:object[object_id=1]:object_content",
				"modify"  : "client_server",
				"merge"   : "keep_modified",
				"additionalProperties": "$smil_object[name=object_content]"
			},	
			{
				"name"    : "object_content",
				"selector": ":level[level_id=*]:screen[screen_id=3]:object[object_id=1]:object_content",
				"modify"  : "client_server",
				"merge"   : "keep_modified",
				"additionalProperties": "$smil_object[name=object_content]"
			}
		]
	}
}
