{
	"title"  : "Babbo per-Bundle overrides",
	"include": "https://some-server.tld/rules/rules-base.json",

	"ruleset" : {
		"type" : "smil_rules",
		"data" : [
			{
				"name"     : "level",
				"selector" : ":level[level_id>1]",
				"merge_ref": ":level[level_id=1]",
				"additionalProperties": "$smil_object[name=level]"
			},
			{
				"name"     : "object_content",
				"selector" : ":level[level_id=*]:screen[screen_id=1]:object[object_id=1]:object_content",
				"modify"   : "client_server",
				"merge"    : "keep_modified",
				"additionalProperties": "$smil_object[name=object_content]"
			},
			{
				"name"    : "object_slot",
				"selector": ":level[level_id=*]:screen[screen_id=1]:object[object_id>1]:object_slot",
				"properties": {
					"variables": {
						"type" : "array",
						"items": {
							"type": "object",
							"properties": {
								"content": {
									"modify": "client_server",
									"merge" : "keep_modified"
								}
							}
						}
					}
				},
				"additionalProperties": "$smil_object[name=object_slot]"
			}
		]
	}
}
